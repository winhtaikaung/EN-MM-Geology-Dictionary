<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
    </style>

    <style name="MyToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Title text -->
        <item name="android:textColorPrimary">@color/textColor</item>

        <!-- Title color in AppCompat.Light  -->
        <item name="android:textColorPrimaryInverse">@color/textColor</item>

        <!-- Menu text-->
        <item name="actionMenuTextColor">@color/textColor</item>
        <!-- Overflow -->
        <item name="android:textColorSecondary">@color/textColor</item>
        <!-- This will change drawer icon -->

        <!-- background of the  -->
        <item name="android:background">@color/toolbarColor</item>
    </style>

    <style name="TV_DEFAULT_BOLD" parent="android:Widget.TextView">

        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_medium_extra</item>
    </style>

    <style name="TV_DEFAULT_LARGE" parent="android:Widget.TextView">

        <item name="fontPath">fonts/maven-pro-regular.ttf</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TV_DEFAULT_LARGE_BOLD" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontPath">fonts/maven-pro-bold.ttf</item>
        <item name="android:padding">@dimen/default_padding_large</item>
        <item name="android:textSize">@dimen/text_size_medium_extra</item>
    </style>

    <style name="BUTTON_DEFAULT_BLACK_BOLD" parent="android:Widget.Button">

        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium_extra</item>
    </style>


    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>
